<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<beans profile="local">
		<bean id="sqlSession" class="fsm.oned.comm.RefreshableSqlSessionFactoryBean"> <!-- org.mybatis.spring.SqlSessionFactoryBean 변경  RefreshableSqlSessionFactoryBean -->
			<property name="dataSource" ref="dataSource" />
			<property name="configLocation" value="classpath:/egovframework/sqlmap/config/${Globals.DbType}/sql-mapper-config.xml" />
			<property name="mapperLocations" value="classpath*:/**/mapper/*Sql.xml" />
			<property name="interval" value="1000" />
		</bean>

		<bean id="sqlSessionTibero" class="fsm.oned.comm.RefreshableSqlSessionFactoryBean"> <!-- org.mybatis.spring.SqlSessionFactoryBean 변경  RefreshableSqlSessionFactoryBean -->
			<property name="dataSource" ref="dataSourceTibero" />
			<property name="configLocation" value="classpath:/egovframework/sqlmap/config/${Globals.Tibero.DbType}/sql-mapper-config.xml" />
			<property name="mapperLocations" value="classpath*:/**/mapper/*SqlTibero.xml" />
			<property name="interval" value="1000" />
		</bean>
	</beans>

	<beans profile="dev,prod">
		<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean"> <!-- org.mybatis.spring.SqlSessionFactoryBean 변경  RefreshableSqlSessionFactoryBean -->
			<property name="dataSource" ref="dataSource" />
			<property name="configLocation" value="classpath:/egovframework/sqlmap/config/${Globals.DbType}/sql-mapper-config.xml" />
			<property name="mapperLocations" value="classpath*:/**/mapper/*Sql.xml" />
		</bean>

		<bean id="sqlSessionTibero" class="org.mybatis.spring.SqlSessionFactoryBean"> <!-- org.mybatis.spring.SqlSessionFactoryBean 변경  RefreshableSqlSessionFactoryBean -->
			<property name="dataSource" ref="dataSourceTibero" />
			<property name="configLocation" value="classpath:/egovframework/sqlmap/config/${Globals.Tibero.DbType}/sql-mapper-config.xml" />
			<property name="mapperLocations" value="classpath*:/**/mapper/*SqlTibero.xml" />
		</bean>
	</beans>

	<beans profile="local,dev,prod">
		<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
		<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
			<property name="basePackage" value="*" />
			<property name="sqlSessionFactoryBeanName" value="sqlSession" />
		</bean>

		<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
			<property name="basePackage" value="*" />
			<property name="annotationClass" value="fsm.oned.comm.aop.TiberoMapper" />
			<property name="sqlSessionFactoryBeanName" value="sqlSessionTibero" />
		</bean>
	</beans>
</beans>
